{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/layouts/*": ["src/components/layouts/*"],
      "@/shortcodes/*": ["src/components/layouts/shortcodes/*"],
      "@/partials/*": ["src/components/layouts/partials/*"],
      "@/connectors/*": ["./src/connectors/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/lib/axios/index.ts",
    "src/lib/axios/refreshToken.ts",
    "next-auth.d.__ts__",
    "src/styles/theme/index.jsx"
  ],
  "exclude": ["node_modules"]
}
